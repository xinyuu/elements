/**
  Cord is a demo element.
  \color #01a
  \symbol Cd
  \symmetries normal
*/

element Cord{
  DebugUtils du;
  EventWindow ew;

  Void behave(){
    WindowServices ws;
    ws.reset(1,1);
    Empty e;
    Wall w;
    for(Int slot=ws.next();slot>=0;slot=ws.next()){
      Atom a= ew[slot];
      du.print((Int) slot);
      if(a is Wall){
        ew[slot]=e;
      }
      else if(a is Empty){
        ew[slot]=w;
      }
    }
  }
}

